@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
           
 <center>
     <h5><b>SIGN IN</b> </h5>
     <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <a style="float: left; margin-bottom:.5rem">EMAIL ADDRESS: </a>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Password"></label>*@
                <div class="row" style="margin-bottom:.5rem">
                    <div class="col-7" ><a style="float: left">PASSWORD:</a></div>
                    <div class="col-5">
                        <a style="float: right" asp-action="ForgotPassword">Forgot your password?</a></div>
                </div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button style="background-color:#ed1563; color: #ffffff" type="submit" class="btn btn-default"><b>SIGN IN</b></button>
            </div>
         <div style="width: 40%; height: 17px; border-bottom: 1px solid #a1a1a1; text-align: center">
             <span style="font-size:1.25rem; background-color: #F7F7F7; padding: 0 10px;">
                <b>OR</b> 
             </span>
         </div>
         <h5 style="margin-top: 15px"><b>SIGN IN WITH...</b>  </h5>
            <div class="form-group">
                <p> New to Hi-Fashion? 
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Sign up</a>
                </p>
            </div>
        </form>
 </center>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
